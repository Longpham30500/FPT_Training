@model FPT_Training.Models.Course
@{
    ViewBag.Title = "Update Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>

@using (Html.BeginForm("UpdateCourse", "Course", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.CourseName, new { @class = "col-md-2 control-label" })
        @Html.EditorFor(m => m.CourseName, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CourseName, "",
          new { @class = "text-danger" }
          )
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        @Html.EditorFor(m => m.Description, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description, "",
          new { @class = "text-danger" }
          )
    </div>
    <button type="submit" class="btn btn-primary">Edit a Course</button>
}

